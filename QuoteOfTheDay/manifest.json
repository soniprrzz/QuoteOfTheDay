{
    "manifest_version": 3,
    "name": "Quote of the Day",
    "version": "1.0",
    "description": "Displays a motivational quote each day.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "permissions": [
      "storage",
      "activeTab"
    ]
  }
  